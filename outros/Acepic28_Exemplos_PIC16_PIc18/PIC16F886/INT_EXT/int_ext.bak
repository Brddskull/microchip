#include <16F628A.h>
#use delay(clock=4000000)
#fuses INTRC_IO,NOWDT,PUT,NOBROWNOUT,NOLVP

boolean led;

#INT_EXT
void trata_ext()
{
led = ~led;
OUTPUT_BIT(PIN_B7,led);
}

void main()
{
led = false;

EXT_INT_EDGE(H_TO_L);
ENABLE_INTERRUPTS(GLOBAL | INT_EXT);


while(true)
     {
     }
} 
